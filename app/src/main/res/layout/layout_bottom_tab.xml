<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llyt_bottom_tab"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:layout_alignParentBottom="true"
    android:background="@color/pager_gray_bg"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tab_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:drawablePadding="2dp"
                android:drawableTop="@drawable/tab_menu_message"
                android:gravity="center"
                android:paddingTop="2dp"
                android:text="@string/tab_message"
                android:textColor="@drawable/tab_menu_text"
                android:textSize="12sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/red_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/tab_message"
                android:layout_marginLeft="-8dp"
                android:layout_marginTop="-4dp"
                android:layout_toRightOf="@+id/tab_message"
                android:background="@drawable/unread_count"
                android:gravity="center"
                android:text="99+"
                android:textColor="@android:color/white"
                android:textSize="11sp"
                android:textStyle="normal" />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tab_workgroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:drawablePadding="2dp"
                android:drawableTop="@drawable/tab_menu_workgroup"
                android:gravity="center"
                android:paddingTop="2dp"
                android:text="@string/tab_workgroup"
                android:textColor="@drawable/tab_menu_text"
                android:textSize="12sp"
                android:textStyle="normal" />

            <ImageView
                android:id="@+id/red_workgroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignRight="@+id/tab_workgroup"
                android:layout_marginRight="6dp"
                android:src="@mipmap/aii_hdpi" />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tab_contacts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:drawablePadding="2dp"
                android:drawableTop="@drawable/tab_menu_contacts"
                android:gravity="center"
                android:paddingTop="2dp"
                android:text="@string/tab_contacts"
                android:textColor="@drawable/tab_menu_text"
                android:textSize="12sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/red_contacts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/tab_contacts"
                android:layout_marginLeft="-14dp"
                android:layout_marginTop="-4dp"
                android:layout_toRightOf="@+id/tab_contacts"
                android:background="@drawable/unread_count"
                android:gravity="center"
                android:text="99"
                android:textColor="@android:color/white"
                android:textSize="11sp"
                android:textStyle="normal" />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tab_mine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:drawablePadding="2dp"
                android:drawableTop="@drawable/tab_menu_mine"
                android:gravity="center"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:paddingTop="2dp"
                android:text="@string/tab_mine"
                android:textColor="@drawable/tab_menu_text"
                android:textSize="12sp"
                android:textStyle="normal" />

            <ImageView
                android:id="@+id/red_mine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignRight="@+id/tab_mine"
                android:src="@mipmap/aii_hdpi" />
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>
