<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:background="#f9f9f9"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="#dfdfdd" />

    <!-- 底部导航 -->

    <LinearLayout
        android:id="@+id/ly_tab_menu"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:background="#33ffffff"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ly_tab_menu_channel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#2f33"
            android:gravity="center">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="#7d32"
                android:padding="5dp">

                <TextView
                    android:id="@+id/tab_message"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:background="@android:color/white"
                    android:drawableTop="@drawable/tab_menu_message"
                    android:gravity="center"
                    android:text="@string/tab_message"
                    android:textColor="@drawable/tab_menu_text" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ly_tab_menu_message"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#20fa"
            android:gravity="center">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="#80f9"
                android:padding="5dp">

                <TextView
                    android:id="@+id/tab_workgroup"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:background="@android:color/white"
                    android:drawableTop="@drawable/tab_menu_workgroup"
                    android:gravity="center"
                    android:text="@string/tab_workgroup"
                    android:textColor="@drawable/tab_menu_text" />
            </RelativeLayout>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/ly_tab_menu_better"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#6229"
            android:gravity="center">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="#229"
                android:padding="5dp">

                <TextView
                    android:id="@+id/tab_menu_better"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:background="@android:color/white"
                    android:drawableTop="@drawable/tab_menu_contacts"
                    android:gravity="center"
                    android:text="@string/tab_contacts"
                    android:textColor="@drawable/tab_menu_text" />
            </RelativeLayout>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/ly_tab_menu_setting"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#20fa"
            android:gravity="center">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="#09f"
                android:padding="5dp">

                <TextView
                    android:id="@+id/tab_menu_setting"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:background="@android:color/white"
                    android:drawableTop="@drawable/tab_menu_mine"
                    android:gravity="center"
                    android:text="@string/tab_mine"
                    android:textColor="@drawable/tab_menu_text" />

            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>


